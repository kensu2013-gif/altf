{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@n8n-as-code/transformer": [
                "./n8n-workflows.d.ts"
            ]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": false,
        "strict": false,
        "noEmit": true,
        "skipLibCheck": true
    },
    "include": [
        "**/*.workflow.ts",
        "**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}